<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemSelectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="36dp"
            android:background="#03A9F4"
            android:backgroundTint="#2196F3"
            android:drawableLeft="@drawable/doran_blade"
            android:text="Doran's Blade\nPrice:450gold"
            android:textColorLink="#03A9F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="28dp"
            android:background="#2196F3"
            android:drawableLeft="@drawable/doran_ring"
            android:text="Doran's Ring\nPrice:400gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="28dp"
            android:background="#2196F3"
            android:drawableLeft="@drawable/black_cleaver"
            android:text="Black Cleaver\nPrice:3300gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="32dp"
            android:background="#2196F3"
            android:drawableLeft="@drawable/trinity_force"
            android:text="Trinity Force\nPrice:3333gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="24dp"
            android:background="#2196F3"
            android:drawableLeft="@drawable/hearthbound_axe"
            android:text="Hearthbound Axe\nPrice:1100gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_marginTop="32dp"
            android:background="#2196F3"
            android:drawableLeft="@drawable/noonquiver"
            android:text="Noonquiver\nPrice:1300gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>